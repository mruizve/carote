<launch>
	<arg name="camera" default="camera" />
	<arg name="auto_exposure" default="false" />
	<arg name="auto_white_balance" default="true" />

	<include file="$(find openni2_launch)/launch/openni2.launch">
		<arg name="camera" default="$(arg camera)" />
	</include>

	<group ns="carote">
		<!-- see corresponding .cfg files for a complete list of parameters and default values -->
		<node name="target" pkg="carote" type="target" respawn="true" output="screen"/>
		<node name="tweak_source" pkg="carote" type="tweak" respawn="true" output="screen"/>

		<node name="carote_parameters" pkg="rqt_reconfigure" type="rqt_reconfigure" respawn="false" output="screen"/>
		<node name="carote_viewer" pkg="rqt_image_view" type="rqt_image_view" respawn="false" output="screen" />
	</group>
</launch>
